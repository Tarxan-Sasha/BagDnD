<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateHero">

    <EditText
        android:id="@+id/nameHero"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Имя персонажа"
        />
    <EditText
        android:id="@+id/ClassHero"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameHero"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Класс героя"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ClassHero"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Создать Героя"
        android:onClick="createHeroButton"
        />

</androidx.constraintlayout.widget.ConstraintLayout>